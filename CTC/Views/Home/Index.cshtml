@model CTC.Models.Combination

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject Microsoft.AspNetCore.Identity.UserManager<CTC.Models.User> Usermanager;
@inject Microsoft.AspNetCore.Identity.SignInManager<CTC.Models.User> signInManager;
<link href="https://cdn.jsdelivr.net/npm/glightbox@3.0.0/dist/css/glightbox.min.css" rel="stylesheet">
<style>
    
    .more-features {
        background-color: white;
        position: relative;
        overflow: hidden;
    }

    .separator {
        width: 50px;
        height: 3px;
        background-color: #388da8;
        margin-left: 0;
    }

    .subjects-container {
        border-left: 4px solid var(--bs-primary);
        transition: transform 0.3s ease;
    }

    .subjects-container:hover {
        transform: translateX(10px);
    }

    .image-wrapper {
        position: relative;
        z-index: 1;
    }

    .shape-decoration {
        position: absolute;
        width: 200px;
        height: 200px;
        background-color: silver;
        border-radius: 50%;
        top: -20px;
        right: -20px;
        z-index: -1;
    }

    .image-wrapper img {
        transition: transform 0.3s ease;
    }

    .image-wrapper:hover img {
        transform: scale(1.05);
    }

        .section-header {
            text-align: center;
        }

        .separator {
            margin: 0 auto;
        }

        .subjects-container {
            border-left: none;
            border-top: 4px solid ;
        }
    }
</style>
<style>
    .client-img {
        width: 100%;
        height: auto;
        max-width: 180px; 
        transition: transform 0.3s ease-in-out;
    }
    .client-logo-wrapper:hover .client-img {
        transform: scale(1.1); 
    }

    .client-name {
        text-align: center;
        font-weight: bold;
        margin-bottom: 10px;
        font-size: 1.2rem;
        color: black;
    }
    .modal-dialog-centered {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .modal-dialog {
        max-width: 500px; 
    }
</style>
<style>
    .sponsors-section {
        position: relative;
        overflow: hidden;
    }

    .section-divider {
        width: 60px;
        height: 3px;
        background: var(--bs-primary);
        margin-bottom: 2rem;
    }

    .sponsor-card {
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .sponsor-wrapper {
        position: relative;
        background: #fff;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .sponsor-img {
        max-width: 100%;
        height: auto;
        transition: transform 0.3s ease;
        filter: grayscale(100%);
    }

    .sponsor-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: #388da8;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all 0.3s ease;
        padding: 1rem;
    }

    .sponsor-name {
        color: white;
        font-weight: 600;
        text-align: center;
        margin-bottom: 0.5rem;
        transform: translateY(20px);
        transition: transform 0.3s ease;
    }

    .sponsor-overlay i {
        color: black;
        font-size: 1.5rem;
        transform: translateY(20px);
        transition: transform 0.3s ease 0.1s;
    }

    .sponsor-wrapper:hover .sponsor-overlay {
        opacity: 1;
    }

    .sponsor-wrapper:hover .sponsor-name,
    .sponsor-wrapper:hover .sponsor-overlay i {
        transform: translateY(0);
    }

    .sponsor-wrapper:hover .sponsor-img {
        transform: scale(1.1);
        filter: grayscale(0%);
    }

    .placeholder-img {
        width: 100%;
        height: 100%;
        background: #f8f9fa;
        font-size: 2rem;
    }

    /* Modal Styles */
    .modal-content {
        border: none;
        border-radius: 15px;
    }

    .sponsor-modal-img {
        max-height: 200px;
        object-fit: contain;
    }

    .modal .btn-primary {
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
    }

    /* Animation */
     fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .sponsor-card {
        animation: fadeInUp 0.5s ease forwards;
        animation-delay: calc(var(--animation-order) * 0.1s);
    }

    /* Responsive Adjustments */
     (max-width: 767.98px) {
        .sponsor-wrapper {
            padding: 1rem;
        }

        .sponsor-name {
            font-size: 0.9rem;
        }
    }
</style>
<main class="main">
    <!-- Header  -->
    <section id="hero" class="hero section">
        <div class="hero-bg">
            <img src="assets/img/hero-bg-light.webp" alt="">
        </div>
        <div class="container text-center">
            <div class="d-flex flex-column justify-content-center align-items-center">
                <h1 data-aos="fade-up">Welcome to <span>CTC</span></h1>
                <p data-aos="fade-up" data-aos-delay="100">
                    @Model.CtcData.CaptionHome
                    <br>
                </p>

                <div class="d-flex" data-aos="fade-up" data-aos-delay="200">
                    <a href="#about" class="btn-get-started">Get Started</a>
                    @if (Model.VideoHome.VideoUrl != null)
                    {
                        <a href="@Model.VideoHome.VideoUrl" class="glightbox btn-watch-video d-flex align-items-center">
                            <i class="bi bi-play-circle"></i><span>Watch Video</span>
                        </a>
                    }
                    else
                    {
                        <a href="" class="glightbox btn-watch-video d-flex align-items-center">
                            <i class="bi bi-play-circle"></i><span>Coming Soon</span>
                        </a>
                    }
                </div>
                @if (signInManager.IsSignedIn(User))
                {
                    var user = await userManager.GetUserAsync(User);
                    if (await userManager.IsInRoleAsync(user, "MediaManager"))
                    {
                        <div class="mt-4">
                            <a asp-action="EditVideoHome" asp-controller="MediaController" class="btn btn-outline-secondary">Edit Video</a>
                        </div>
                    }
                }
                <hr>
                @if (!string.IsNullOrEmpty(Model.CtcData.LogoUrl))
                {
                    <img src="@Model.CtcData.LogoUrl" data-aos="zoom-out" data-aos-delay="300" />
                }
                else
                {
                    <img src="~/assets/img/logo-png.png" class="img-fluid hero-img" alt="" data-aos="zoom-out" data-aos-delay="300">

                }
            </div>
        </div>
    </section>
    <section id="featured-services" class="featured-services section light-background">
        <div class="container">
            <div class="row gy-4">

                <div class="col-xl-4 col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-item d-flex">
                        <div class="icon flex-shrink-0"><i class="bi bi-briefcase"></i></div>
                        <div>
                            <h4 class="title"><a asp-action="Join" asp-controller="Home" class="stretched-link">Join Member</a></h4>
                            <p class="description">Join us participate in exciting projects, and advance your skills in the ever-evolving field of technology!</p>
                        </div>
                    </div>
                </div>
                <!-- End Service Item -->
                <div class="col-xl-4 col-lg-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="service-item d-flex">
                        <div class="icon flex-shrink-0"><i class="bi bi-card-checklist"></i></div>
                        <div>
                            <h4 class="title"><a asp-action="VolunteerWork" asp-controller="Home" class="stretched-link">Volunteering</a></h4>
                            <p class="description">
                                Become a part of the Computing Technology Club today and unlock a world of innovation, learning, and collaboration.
                            </p>
                        </div>
                    </div>
                </div><!-- End Service Item -->
                <div class="col-xl-4 col-lg-6" data-aos="fade-up" data-aos-delay="300">
                    <div class="service-item d-flex">
                        <div class="icon flex-shrink-0"><i class="bi bi-bar-chart"></i></div>
                        <div>
                            <h4 class="title"><a asp-action="AdminstrationDepartment" asp-controller="Home" class="stretched-link">Administration Department</a></h4>
                            <p class="description">Join the Administration Department and help drive our success. Be part of a team that values efficiency and innovation—your skills can make a real impact!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /Header  -->
    <!-- Who We Are Section -->
    <section id="about" class="about-section py-5">
        <div class="container">
            <div class="row gy-4 align-items-center">
                <div class="col-lg-6 content pe-lg-5" data-aos="fade-right" data-aos-delay="100">
                    <h2 class="display-6 fw-bold mb-4">@Model.WhoWeAre.Header</h2>
                    <div class="content-wrapper mb-4">
                        <p class="lead text-muted fst-italic">@Model.WhoWeAre.Content</p>
                    </div>
                    <div class="features-list mb-4">
                        <div class="feature-item d-flex align-items-center mb-3 p-3 bg-light rounded-3 hover-card">
                            <div class="icon-wrapper me-3">
                                <i class="bi bi-people-fill text-secondary fs-4"></i>
                            </div>
                            <div class="feature-content">
                                <h4 class="h6 mb-1">Student Count</h4>
                                <p class="mb-0 text-muted">@Model.WhoWeAre.CountStudent</p>
                            </div>
                        </div>

                        <div class="feature-item d-flex align-items-center p-3 bg-light rounded-3 hover-card">
                            <div class="icon-wrapper me-3">
                                <i class="bi bi-trophy-fill text-secondary fs-4"></i>
                            </div>
                            <div class="feature-content">
                                <h4 class="h6 mb-1">Achievement</h4>
                                <p class="mb-0 text-muted">@Model.WhoWeAre.Footer</p>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons d-flex align-items-center gap-3">
                        <a asp-action="About" asp-controller="Home" class="btn btn-outline-secondary d-flex align-items-center gap-2">
                            Read More
                            <i class="bi bi-arrow-right"></i>
                        </a>

                        @if (signInManager.IsSignedIn(User))
                        {
                            var user = await userManager.GetUserAsync(User);
                            if (await userManager.IsInRoleAsync(user, "MediaManager"))
                            {
                                <a asp-action="EditWhoWeAre" asp-controller="Media"
                                   class="btn btn-outline-secondary d-flex align-items-center gap-2">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit Content
                                </a>
                            }
                        }
                    </div>
                </div>

                <!-- Image Column -->
                <div class="col-lg-6" data-aos="fade-left" data-aos-delay="200">
                    <div class="image-wrapper position-relative">
                        @if (!string.IsNullOrEmpty(Model.WhoWeAre.ImageUrl))
                        {
                            <img src="@Model.WhoWeAre.ImageUrl"
                                 class="img-fluid rounded-4 shadow-lg hover-zoom"
                                 alt="Who We Are">
                            <div class="image-decoration"></div>
                        }
                        else
                        {
                            <div class="placeholder-image bg-light d-flex align-items-center justify-content-center rounded-4"
                                 style="height: 400px;">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /Who We Are Section -->
    <!-- Sponser Section -->
    <section id="clients" class="sponsors-section bg-light py-5">
        <div class="container" data-aos="fade-up">
            <!-- Section Header -->
            <div class="row justify-content-center mb-5">
                <div class="col-lg-6 text-center">
                    <div class="container section-title" data-aos="fade-up">
                        <h2>Our Sponsors</h2>
                    </div>
                </div>
            </div>

            <!-- Sponsors Grid -->
            <div class="row g-4 justify-content-center">
                @foreach (var sponsor in Model.sponsers)
                {
                    <div class="col-xl-2 col-lg-3 col-md-4 col-6"
                         data-aos="zoom-in"
                         data-aos-delay="@(Model.sponsers.IndexOf(sponsor) * 100)">
                        <div class="sponsor-card"
                             data-bs-toggle="modal"
                             data-bs-target="#sponsorModal@(Model.sponsers.IndexOf(sponsor))">
                            <div class="sponsor-wrapper">
                                <div class="sponsor-overlay">
                                    <span class="sponsor-name">@sponsor.Name</span>
                                    <i class="bi bi-plus-circle"></i>
                                </div>
                                @if (!string.IsNullOrEmpty(sponsor.ImageUrl))
                                {
                                    <img src="@sponsor.ImageUrl"
                                         class="img-fluid sponsor-img"
                                         alt="@sponsor.Name"
                                         loading="lazy">
                                }
                                else
                                {
                                    <div class="placeholder-img d-flex align-items-center justify-content-center">
                                        <i class="bi bi-building text-muted"></i>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Modal for each sponsor -->
                    <div class="modal fade" id="sponsorModal@(Model.sponsers.IndexOf(sponsor))" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header border-0">
                                    <h5 class="modal-title fw-bold">@sponsor.Name</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body text-center">
                                    <img src="@sponsor.ImageUrl"
                                         class="img-fluid mb-3 sponsor-modal-img"
                                         alt="@sponsor.Name">
                                    <p class="text-muted">@sponsor.Description</p>
                                </div>
                                <div class="modal-footer border-0">
                                    <a href="@sponsor.Description"
                                       class="btn btn-outline-secondary"
                                       target="_blank">
                                        <i class="bi bi-globe me-2"></i>
                                        Visit Website
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    @foreach (var sponser in Model.sponsers)
    {
        <div class="modal fade" id="clientModal@Model.sponsers.IndexOf(sponser)" tabindex="-1" aria-labelledby="clientModalLabel@Model.sponsers.IndexOf(sponser)" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="clientModalLabel@Model.sponsers.IndexOf(sponser)">@sponser.Name</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>@sponser.Description</p>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- /Sponser Section -->
    <!-- Features Section -->
    <section id="features" class="features section">
        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Features</h2>
            <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
        </div><!-- End Section Title -->

        <div class="container">
            <div class="row justify-content-between">
                <!-- Left Side: Tabs -->
                <div class="col-lg-5 d-flex align-items-center">
                    <ul class="nav nav-tabs" data-aos="fade-up" data-aos-delay="100">
                        @if (Model.FeatureApp != null && Model.FeatureApp.Any())
                        {
                            @foreach (var feature in Model.FeatureApp)
                            {
                                var isActive = feature.Header == Model.FeatureApp.First().Header; // Make first item active
                                <li class="nav-item">
                                    <a class="nav-link @(isActive ? "active" : "")"
                                       data-bs-toggle="tab"
                                       data-bs-target="#features-tab-@feature.Header.Replace(" ", "-").ToLower()">
                                        <i class="bi bi-binoculars"></i>
                                        <div>
                                            <h4 class="d-none d-lg-block">@feature.Header</h4>
                                            <p>@feature.Content</p>
                                        </div>
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <p>No features available.</p>
                        }
                    </ul><!-- End Tab Nav -->
                </div>

                <!-- Right Side: Tab Content -->
                <div class="col-lg-6">
                    <div class="tab-content" data-aos="fade-up" data-aos-delay="200">
                        @if (Model.FeatureApp != null && Model.FeatureApp.Any())
                        {
                            @foreach (var feature in Model.FeatureApp)
                            {
                                var isActive = feature.Header == Model.FeatureApp.First().Header; // Make first item active
                                <div class="tab-pane fade @(isActive ? "active show" : "")" id="features-tab-@feature.Header.Replace(" ", "-").ToLower()">
                                    <img src="@feature.ImageUrl" alt="@feature.Header" class="img-fluid">
                                </div>
                            }
                        }
                        else
                        {
                            <p>No feature content available.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /Features Section -->
