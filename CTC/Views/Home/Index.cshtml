                    <div class="container section-title" data-aos="fade-up">
                        <h2>@Model.esports.HeaderEsports</h2>
                    </div>

                    <!-- Main Content -->
                    <div class="content-wrapper mb-4">
                        <p class="lead text-muted">@Model.esports.ContentEsports</p>
                    </div>

