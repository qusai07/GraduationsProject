@{
    ViewData["Title"] = "Volunteer Work";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<CTC.Models.Volunteer.Volunteering> 

<link href="~/css/Event.css" rel="stylesheet" />

<section class="light">
    <div class="container py-2">
        @if (Model != null && Model.Any())
        {
            foreach (var events in Model)
            {
                <div class="h1 text-center text-dark" id="pageHeaderTitle">Volunteer Work</div>

                <article class="postcard light blue">
                    <a class="postcard__img_link" href="#">
                        <img class="postcard__img" src="@events.ImageUrl" />
                    </a>
                    <div class="postcard__text t-dark">
                        <h1 class="postcard__title blue"><a>@events.Organization</a></h1>
                        <div class="postcard__subtitle small">
                            <time datetime="@events.Date">
                                <i class="fas fa-calendar-alt mr-2"></i>@events.Date
                            </time>
                        </div>
                        <div class="postcard__bar"></div>
                        <div class="postcard__preview-txt">@events.Description</div>
                        <ul class="postcard__tagbox">
                            <li class="tag__item"><i class="fas fa-tag mr-2"></i>Location : @events.Location</li>
                            <li class="tag__item"><i class="fas fa-clock mr-2"></i>55 mins.</li>
                        </ul>

                    </div>
                </article>
            }
        }
        else
        {
            <h1 class="h1 text-center" id="pageHeaderTitle">All Volunteering</h1>

            <p class="text-center">No events available for this category.</p>
        }
    </div>
</section>
