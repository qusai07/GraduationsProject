@model CTC.Models.Admin.CtcData

<footer id="footer" class="footer position-relative light-background">

    <div class="container footer-top">
        <div class="row gy-4">
            <div class="col-lg-4 col-md-6 footer-about">
                <a href="index.html" class="logo d-flex align-items-center">
                    <span class="sitename">CTC</span>
                </a>
                <div class="footer-contact pt-3">
                    <p>@Model.City, @Model.Address</p>
                    <p class="mt-3"><strong>Phone:</strong> <span>@Model.PhoneNumber</span></p>
                    <p><strong>Email:</strong> <span>@Model.Email</span></p>
                </div>
                <div class="social-links d-flex mt-4">
                    <a href="@Model.FaceBook"><i class="bi bi-facebook"></i></a>
                    <a href="@Model.Instagram"><i class="bi bi-instagram"></i></a>
                    <a href="@Model.LinedIn"><i class="bi bi-linkedin"></i></a>
                    <a href="@Model.Nahno"><i class="bi bi-person-workspace"></i></a>

                </div>
            </div>

            <div class="col-lg-2 col-md-3 footer-links">
                <h4>Useful Links</h4>
                <ul>
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li><a asp-action="About" asp-controller="Home">About</a></li>
                    <li><a href="#">Privacy policy</a></li>
                </ul>
            </div>

            <div class="col-lg-2 col-md-3 footer-links">
                <h4>Our Services</h4>
                <ul>
                    <li><a asp-action="Facultymembers" asp-controller="Home">Faculty members</a></li>
                    <li><a asp-action="SummaryMaterial" asp-controller="Home">Academic Summary</a></li>
                    <li><a asp-action="BachelorPrograms" asp-controller="Home"> Bachelor Programs</a></li>
                    <li><a asp-action="CalculateGPA" asp-controller="Home">Calculate GPA</a></li>

                </ul>
            </div>

            <div class="col-lg-4 col-md-12 footer-newsletter">
                <h4>Our Newsletter</h4>
                <p>Subscribe to our newsletter and receive the latest news about our products and services!</p>

            </div>

        </div>
    </div>

    <div class="container copyright text-center mt-4">
        <p>© <span>Copyright</span> <strong class="px-1 sitename">CTC</strong><span>All Rights Reserved</span></p>
        <div class="credits">
        </div>
    </div>

</footer>

