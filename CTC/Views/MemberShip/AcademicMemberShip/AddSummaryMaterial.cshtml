@model CTC.ViewModels.Academic.MaterialSummaryViewModel
@{
    ViewData["Title"] = "Add Summary Material";
    Layout = "~/Views/Shared/_LayoutMemberShip.cshtml";
}

<div class="container py-4" style="margin-top: 50px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <h5 class="card-title p-4">@ViewData["Title"]</h5>
                <div class="card-body">
                    <form asp-action="AddSummaryMaterial" asp-controller="AcademicMemberShip" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="MaterialName">Material Name</label>
                            <input asp-for="MaterialName" class="form-control" />
                            <span asp-validation-for="MaterialName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="materialsDepartment">Select Department</label>
                            <select asp-for="materialsDepartment" asp-items="Model.MaterialsDepartmentList" class="form-control">
                                <option value="0">Select Department</option>
                            </select>
                            <span asp-validation-for="materialsDepartment" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaterialDescription">Material Description</label>
                            <textarea asp-for="MaterialDescription" class="form-control"></textarea>
                            <span asp-validation-for="MaterialDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="pdfFile">Upload PDF Summary</label>
                            <input type="file" asp-for="pdfFile" class="form-control" accept=".pdf" />
                            <span asp-validation-for="pdfFile" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MemberName">Enter Your Name</label>
                            <input asp-for="MemberName" class="form-control" />
                            <span asp-validation-for="MemberName" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-outline-primary">Add Material</button>
                            <a asp-action="TableSummaryMaterial" asp-controller="AcademicMemberShip" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}