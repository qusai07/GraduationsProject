@model IEnumerable<CTC.Models.Volunteer.VolunteerParticipants>
@{
    ViewData["Title"] = "Tables";

    Layout = "~/Views/Shared/_LayoutAssociateMember.cshtml";

}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>@ViewData["Title"]</h1>
    
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Your Volunteer participated</h5>
                        <div class="table-responsive">
                            @if (Model == null || !Model.Any())
                            {
                                <div class="alert alert-info text-center">
                                    You haven't participated in any volunteer events yet.
                                </div>
                            }
                            else
                            {
                                <table class="table datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">Event </th>
                                            <th scope="col">Status</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var participation in Model)
                                        {
                                            <tr>
                                                <td>@participation.Volunteering.Organization</td>
                                                <td>@participation.Status</td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>
