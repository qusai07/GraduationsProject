@model IEnumerable<CTC.Models.Volunteer.Volunteering>;
@{
    ViewData["Title"] = "Volunteers Work Table";
    Layout = "~/Views/Shared/_LayoutLeaders.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>@ViewData["Title"]</h1>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">All Volunteer work</h5>
                        <a asp-action="AddVolunteerwork" asp-controller="VolunteerManager" class="btn btn-outline-secondary mb-3">Add New Volunteer Opportunity</a>
                        <div class="table-responsive">
                            <table class="table datatable">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">Number</th>
                                        <th scope="col">Organization</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Location</th>
                                        <th scope="col">Type</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Organization</td>
                                            <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                            <td>@item.Location</td>
                                            <td>@item.Type</td>
                                            <td>@item.Description</td>
                                            <td>
                                                <a asp-action="EditVolunteer" asp-controller="VolunteerManager" asp-route-id="@item.Id"
                                                   class="btn btn-warning btn-sm">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                                <a href="~/LeaderDepartment/Volunteer/Delete/@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div> <!-- End responsive table -->
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center">
        No volunteer opportunities available.
    </div>
}