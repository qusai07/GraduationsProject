@model CTC.Models.MediaModels.Videohome
@{
    ViewData["Title"] = "Edit Video";
    Layout = "~/Views/Shared/_LayoutLeaders.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Edit Video Home</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="HomeAdmin" asp-controller="Academic">Back</a></li>
                <li class="breadcrumb-item active">Edit Video Home</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Edit Video Home</h5>

                        <form asp-action="EditVideoHome" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label asp-for="VideoFile" class="form-label">Upload Video</label>
                                <input asp-for="VideoFile" class="form-control" type="file" />
                                <span asp-validation-for="VideoFile" class="text-danger"></span>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.VideoUrl))
                            {
                                <div class="form-group">
                                    <label>Current Video</label>
                                    <video class="d-block mt-2" controls width="300">
                                        <source src="@Model.VideoUrl" type="video/mp4" />
                                        Your browser does not support the video tag.
                                    </video>
                                </div>
                            }

                            <div class="d-flex justify-content-between mt-4">
                                <button type="submit" class="btn btn-outline-secondary">Save</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
