@model CTC.Models.MediaModels.Videohome
@{
    ViewData["Title"] = "Edit Video";
    Layout = "~/Views/Shared/_LayoutLeaders.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Edit Video Home</h1>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Edit Video Home</h5>
                        <form asp-action="EditVideoHome" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="VideoUrl" />

                            <div class="mb-3">
                                <label asp-for="VideoFile" class="form-label">Upload Video (Max 100MB)</label>
                                <input asp-for="VideoFile" class="form-control" type="file" accept=".mp4,.avi,.mov" />
                                <span asp-validation-for="VideoFile" class="text-danger"></span>
                                <small class="form-text text-muted">Allowed formats: .mp4, .avi, .mov</small>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.VideoUrl))
                            {
                                <div class="form-group mb-3">
                                    <label>Current Video</label>
                                    <video class="d-block mt-2" controls width="300">
                                        <source src="@Model.VideoUrl" type="video/mp4" />
                                        Your browser does not support the video tag.
                                    </video>
                                </div>
                            }

                            <div class="d-flex justify-content-between mt-4">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <a asp-action="HomeAdmin" asp-controller="Academic" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}