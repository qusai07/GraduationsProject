@model CTC.Models.Leader.Appointment
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_LayoutLeaders.cshtml";
}

<h2>@ViewData["Title"]</h2>

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Home</h1>
    </div><!-- End Page Title -->
    <section class="section dashboard">
        <div class="row">
            <!-- Left side columns -->

            <div class="col-lg-12">
                <div class="row">
                    <div class="col-xxl-4 col-md-6">
                        <div class="card info-card revenue-card">
                            <div class="card-body">
                                <h5 class="card-title">Total Appointments</h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                        <p>@ViewBag.TotalAppointments</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xxl-4 col-md-6">
                        <div class="card info-card revenue-card">
                            <div class="card-body">
                                <h5 class="card-title">Waiting Appointments</h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                        <p>@ViewBag.WaitingAppointments</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xxl-4 col-xl-6">
                        <div class="card info-card customers-card">
                            <div class="card-body">
                                <h5 class="card-title">Pending Appointments</h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                        <p>@ViewBag.PendingAppointments</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xxl-4 col-xl-6">
                        <div class="card info-card customers-card">
                            <div class="card-body">
                                <h5 class="card-title">Scheduled  Appointments</h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                        <p>@ViewBag.ScheduledAppointments</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <!-- News & Updates Traffic -->
                <div class="card">
                    <div class="card-body pb-4">
                        <h5 class="card-title">News &amp; Messages </h5>
                        <div class="news">
                            @if (ViewBag.Latestnotification != null && ViewBag.Latestnotification.Count > 0)
                            {
                                @foreach (var appointment in ViewBag.RecentAppointments as List<CTC.Models.Leader.Appointment>)
                                {
                                    <tr>
                                        <td>@appointment.Joiner?.FirstName+" "+@appointment.Joiner?.LastName</td>
                                        <td>@appointment.Status</td>
                                        <td>@appointment.CreatedAt.ToString("g")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <li class="dropdown-item text-center text-muted">You have no new notifications.</li>
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>

</main><!-- End #main -->
