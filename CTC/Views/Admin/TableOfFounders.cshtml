@{
    ViewData["Title"] = "Founders CTC Tables";
    Layout = "~/Views/Shared/_LayoutDahsBoard.cshtml";
}
@model IEnumerable<CTC.Models.Admin.Founders>
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Tables</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">All Founders</h5>

                        <!-- Make table responsive -->
                        <div class="table-responsive">
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>Description</th>
                                        <th>Image</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        int index = 1;
                                        foreach (var founder in Model)
                                        {
                                            <tr>
                                                <td>@founder.Name</td>
                                                <td>@founder.position</td>
                                                <td>@founder.Description</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(founder.ImageUrl))
                                                    {
                                                        <img src="@founder.ImageUrl" alt="@founder.Name" style="width: 50px; height: 50px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <span>No Image</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a  asp-action="EditFounder" asp-route-id="@founder.Id" class="btn btn-primary">Edit</a>
                                                    <a  asp-action="DeleteFounder" asp-route-id="@founder.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this founder?');">Delete</a>
                                                </td>
                                            </tr>
                                            }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center">No founders available.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>
