@model IEnumerable<CTC.Models.Event.EventsCTC>
@{
    Layout = "~/Views/Shared/_LayoutDahsBoard.cshtml";

}




<form>
    <main id="main" class="main">
        <div class="pagetitle">
            <h3>Select Event to Generate QR Code</h3>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a>Pages</a></li>
                    <li class="breadcrumb-item">QR Code</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="container">

                        <div class="row d-flex justify-content-center align-items-center h-100">

                            <form asp-action="SelectEventForQrCode" method="get">
                                <div class="form-group">
                                    <label for="eventId">Select Event</label>
                                    <select id="eventId" name="eventId" class="form-control">
                                        <option value="">Select an event</option> <!-- Optional default value -->
                                        @foreach (var evt in Model)
                                        {
                                            <option value="@evt.Id">@evt.Name - @evt.EventDate.ToString("yyyy-MM-dd")</option>
                                        }
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary" asp-action="GenerateEventQrCode" asp-controller="Admin">Generate QR Code</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main><!-- End #main -->


</form>
